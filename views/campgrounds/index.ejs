<% layout('layouts/boilerplate') %>
    <h1>All campgrounds</h1>
    <div><a href="/campgrounds/new">Add campground</a></div>
    <ul>
        <% for(let camp of allcamps) {%> 
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= camp.image  %>" alt="image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title"><%= camp.title  %> </h4>
                            <p class="card-text"><%= camp.description  %> </p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location %> </small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"><%= camp.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 
    </ul>
